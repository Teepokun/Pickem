<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/repeating_image"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

            <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
        
        <TextView
            android:id="@+id/RegistrationActivity_FirstNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RegisterActivity_FirstName" 
            style="@style/LabelText"
             /> 

        <EditText
            android:id="@+id/RegistrationActivity_FirstName_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/RegistrationActivity_LastNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/RegisterActivity_LastName" 
            style="@style/LabelText"/>
 
        <EditText
            android:id="@+id/RegistrationActivity_LastName_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10" 
            android:inputType="text" />
  
        <TextView
            android:id="@+id/RegistrationActivity_UsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/RegisterActivity_Username" 
            style="@style/LabelText"/>

        <EditText
            android:id="@+id/RegistrationActivity_Username_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10" 
            android:inputType="text"/>

        <TextView
            android:id="@+id/RegistrationActivity_PasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/RegisterActivity_Password" 
            style="@style/LabelText"/>

        <EditText
            android:id="@+id/RegistrationActivity_Password_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10"
            android:inputType="textPassword" />
            

        <TextView
            android:id="@+id/RegistrationActivity_ConfirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/RegisterActivity_PasswordConf" 
            style="@style/LabelText"/>

        <EditText
            android:id="@+id/RegistrationActivity_ConfirmPassword_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10"
            android:inputType="textPassword" />
        
        <TextView
            android:id="@+id/RegistrationActivity_EmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/RegisterActivity_Email" 
            style="@style/LabelText"/>
  
        <EditText
            android:id="@+id/RegistrationActivity_Email_Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext" 
            android:ems="10"
            android:inputType="textEmailAddress" />

        
    </LinearLayout>

    <Button
        android:id="@+id/RegisterActivity_Cancel_Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_alignBaseline="@+id/RegisterActivity_Submit_Button"
        android:layout_alignBottom="@+id/RegisterActivity_Submit_Button"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/RegisterActivity_Submit_Button"
        android:text="@string/cancel_button"/>

    <Button
        android:id="@+id/RegisterActivity_Submit_Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"  
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="42dp" 
        android:text="@string/RegisterActivity_Submit" />



</RelativeLayout>